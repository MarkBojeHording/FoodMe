  <div class="row">
    <% @dishes.each do |dish| %>
      <%= link_to dish_path(dish) do %>
      <p><%= dish.title %></p>
        <swiper-container navigation="false" class="my-swiper-container col-12 col-lg-4" pagination="true" scrollbar="false" effect="coverflow">
            <% @results.items.first(5).each do |item| %>
            <swiper-slide>
              <div class="card-category" alt="First slide">
                <%= image_tag item.pagemap.metatags.first["og:image"],
                  style: "width: 400, height: 300, crop: 'fill',
                    overlay: {font_family: 'Cookie', font_size: 40, font_weight: 'bold', text: '#{dish.title}'}, color: '#ffff',
                    angle: 0, flags: 'layer_apply', x: 10, y: 10" %>
              </div>
            </swiper-slide>
          <% end %>
        </swiper-container>
      <% end %>
    <% end %>
  </div>
</div>


